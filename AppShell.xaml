<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiAppHotel.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiAppHotel"
    Shell.FlyoutBehavior="Disabled"
    Title="MauiAppHotel">

    <!-- Página de Contratação de Hospedagem como Página Inicial -->
    <ShellContent
        Title="Contratação de Hospedagem"
        ContentTemplate="{DataTemplate local:Views.ContratacaoHospedagem}"
        Route="ContratacaoHospedagem" />

    <!-- Página Sobre -->
    <ShellContent
        Title="Sobre"
        ContentTemplate="{DataTemplate local:Views.Sobre}"
        Route="Sobre" />
</Shell>
